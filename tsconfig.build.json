{
	"compilerOptions": {
		"module": "es2022",
		"target": "es2022",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"importHelpers": true,
		"listFiles": false,
		"traceResolution": false,
		"pretty": true,
		"lib": [
			"es2022"
		],
		"types": [
			"node",
			"jest"
		],
		"strict": true,
		"alwaysStrict": false,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false, // TODO: enable this later
		"noUnusedParameters": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
	},
	"compileOnSave": false,
	"exclude": [
		"**/__tests__/**/*",
		"node_modules",
		"**/dist/**/*"
	],
}
